@page
@model Employee_Management_Website.Pages.Jobs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fw-bold text-center mb-5">DELETE JOB</h1>

<h3>Are you sure you want to delete this job?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Category)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Job.Id" />
