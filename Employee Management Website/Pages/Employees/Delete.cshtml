@page
@model Employee_Management_Website.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fw-bold text-center mb-5">DELETE EMPLOYEE</h1>

<h3 class="mb-3">Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.EmploymentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmploymentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PersonalPhoto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Employee.PersonalPhoto)" class="rounded-circle" style="width: 100px;height: 100px;object-fit: cover;" alt="ProfileImg" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Governorate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Governorate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.isProbation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.isProbation)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
